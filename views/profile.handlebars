{{# if borrowBooks }}
      <center><strong><h3 style="font-family:Georgia;">Books You've Borrowed ..</h3></strong></center>
      <form method="POST" action="/users/cart/{{user._id}}">
      <center>
        <button class="z-depth-3 waves-effect waves-dark red accent-3 btn" type="submit" autocomplete="off" name="submit" value="Return All">Return All<i class="material-icons left">reply_all</i><input class="hide" type="submit" autocomplete="off" name="submit" value="Return All"></button>
          &nbsp;
        <button class="z-depth-3 waves-effect waves-dark btn light-green accent-4" type="submit" autocomplete="off" name="submit" value="Renew All">Renew All<i class="material-icons left">swap_calls</i><input class="hide" type="submit" autocomplete="off" name="submit" value="Renew All"></button>
      </center>
    </form>
    {{# each borrowBooks}}
<div class="container">
  
<div class="row">


           
            <div class="card  horizontal medium sticky-action z-depth-5" style="overflow: visible;">
              <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="{{ this.imageFile }}">
              </div>
              <div class="card-content large">
                <span class="card-title activator grey-text text-darken-4">{{ this.bookName }}<i class="material-icons right">more_vert</i></span>
                <h6>by {{this.authorName}}</h6>
              </div>
              
              <div class="card-action">
                <form method="POST" action="/users/returnRenew/{{this.isbnNumber}}">
                  <center>
                    <button class="z-depth-3 waves-effect waves-dark red accent-3 btn" type="submit" autocomplete="off" name="submit" value="Return">Return<i class="material-icons left">reply</i><input class="hide" type="submit" autocomplete="off" name="submit" value="Return"></button>
                  &nbsp;
                  <button class="z-depth-3 waves-effect waves-dark btn light-green accent-4" type="submit" autocomplete="off" name="submit" value="Renew">Renew<i class="material-icons left">autorenew</i><input class="hide" type="submit" autocomplete="off" name="submit" value="Renew"></button>
                  </center>
                </form>
              </div>

              <div class="card-reveal" style="display: none; transform: translateY(0%);">
                <span class="card-title grey-text text-darken-4"> <b>{{ this.bookName }}</b><i class="material-icons right">close</i></span>
                <h6>by {{this.authorName}}</h6>
                
                <!--<p>{{this._id}}</p>-->
                <h6><b>Department: </b> {{ this.bookDept}}</h6>
                <br>
                <h6><b>ISBN Number: </b> {{ this.isbnNumber}}</h6>
                <br>
                <h6><b>Borrow Time: </b> {{ this.borrowTime}}</h6>
                <br>
                <h6><b>Renew Time: </b> {{ this.renewTime}}</h6>
                <br>
                <h6><b>Fine Ammount: </b> {{ this.fine}}</h6>
                
                <br><br><br><br><br><br>
              </div>
            </div>
          </div>

          
</div>

{{/ each}}

