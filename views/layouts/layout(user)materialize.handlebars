            <li><a href="/users/viewPosts/{{user._id}}" class="grey-text text-lighten-3">View Posts</a></li>
            <li><a class="grey-text text-lighten-3" href="/{{user.accountType}}/profile/{{ user._id }}">Profile</a></li>
            {{ else }}
            <li><a href="/users/showBooks/" class="grey-text text-lighten-3">Show Books</a></li>
            <li><a href="/users/cart/" class="grey-text text-lighten-3">Cart</a></li>
            <li><a href="/users/viewPosts/" class="grey-text text-lighten-3">View Posts</a></li>
            {{/ if}}
                </ul>
              </div>
            </div>
          </div>
          <div class="footer-copyright">
            <div class="container">
            <i class="material-icons" style="position:absolute">copyright</i>
            <div class="container">
               <strong>Glosys Technology Solutions Pvt Ltd.</strong>
               </div>
            </div>
          </div>
        </footer>
